@using SVE.Application.Dtos.Network.NetworkType
@model List<GetNetworkTypeDtos>

<h2>Network Types</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Network Type</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Estado</th>
            <th>Fecha Creación</th>
            <th>Fecha Actualización</th> 
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@(item.Estado ? "Sí" : "No")</td>
                <td>@item.CreateAt?.ToString("yyyy-MM-dd")</td>
                <td>@item.UpdateAt?.ToString("yyyy-MM-dd")</td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Disable" method="post" style="display:inline;">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
