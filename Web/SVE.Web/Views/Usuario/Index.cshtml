@model List<SVE.Application.Dtos.Configuration.ReadUsuarioDto>

<h2>Usuarios</h2>
<p><a asp-action="Create" class="btn btn-primary">Crear Nuevo Usuario</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var usuario in Model)
        {
            <tr>
                <td>@usuario.Id</td>
                <td>@usuario.Nombre</td>
                <td>@usuario.Correo</td>
                <td>@usuario.Rol</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@usuario.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="Id" value="@usuario.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

