@model SVE.Application.Dtos.Configuration.CreateDetallePedidoDto

<h2>Agregar Detalle de Pedido</h2>

<form asp-action="Create" method="post">
@Html.AntiForgeryToken()
    <div class="form-group mb-3">
        <label asp-for="PromocionId" class="form-label"></label>
        <input asp-for="PromocionId" class="form-control" />
        <span asp-validation-for="PromocionId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PedidoId" class="form-label"></label>
        <input asp-for="PedidoId" class="form-control" />
        <span asp-validation-for="PedidoId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ProductoId" class="form-label"></label>
        <input asp-for="ProductoId" class="form-control" />
        <span asp-validation-for="ProductoId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Cantidad" class="form-label"></label>
        <input asp-for="Cantidad" class="form-control" />
        <span asp-validation-for="Cantidad" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="PrecioUnitario" class="form-label"></label>
        <input asp-for="PrecioUnitario" class="form-control" />
        <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Agregar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

