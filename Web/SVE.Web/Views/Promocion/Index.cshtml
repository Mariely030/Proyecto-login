@model List<SVE.Application.Dtos.Configuration.ReadPromocionDto>

<h2>Promociones</h2>
<p><a asp-action="Create" class="btn btn-primary">Crear Nueva Promoción</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Descripción</th>
            <th>Descuento</th>
            <th>Activa</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var promo in Model)
        {
            <tr>
                <td>@promo.Id</td>
                <td>@promo.Descripcion</td>
                <td>@promo.Descuento</td>
                <td>@(promo.Activa ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@promo.Id" class="btn btn-sm btn-warning">Editar</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="Id" value="@promo.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>



